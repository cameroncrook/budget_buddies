<form class="account-form" action="/account/login" method="post">
    <div class="account-form__inputs">
        <div>
            <label for="account_username">Username</label>
            <input id="account_username" name="account_username" type="text">
        </div>
    
        <div>
            <label for="account_password">Password</label>
            <input id="account_password" name="account_password" type="password">
        </div>
    </div>
    
    <div class="account-form__submit">
        <input type="submit" value="Login">
        <a href="/account/create-budget">Create a budget</a>
    </div>
</form>