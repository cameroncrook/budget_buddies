<h2 style="color: #fefefe; text-align: center;">Edit <%= name %></h2>

<form class="standard-form" action="/budget/edit-sub-category" method="POST">
    <div>
        <label for="sub_name">Name</label>
        <input type="text" id="sub_name" name="sub_name" value="<%=name%>" required>
    </div>

    <div>
        <label for="sub_budget">Budget</label>
        <input type="number" id="sub_budget" name="sub_budget" step="0.01" min="0" placeholder="0.00" value="<%=budget%>" required>
    </div>

    <input type="hidden" value="<%=id%>" name="sub_id">

    <input type="submit" value="Change">
</form>