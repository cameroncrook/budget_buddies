<section>
    <h2>Current Period</h2>
    <div class="progress-bar">
        <%- currentInnerBar %>
    </div>
    <p class="progress-bar__label"><%= currentLabel %></p>
</section>

<section>
    <h2>Spending Categories</h2>
    <div class="stats-box">
        <p>Scroll to view more</p>
        <div class="">
            <div class="chart">
                <%- barHtml %>
            </div>
        </div>
    </div>
</section>

<section>
    <h2>Balance Trends</h2>
    <%- balanceChart %>

    <table class="balance-table">
        <thead>
            <th>Date</th>
            <th>Balance</th>
            <th></th>
        </thead>
        <tbody>
            <%- balanceEntries %>
        </tbody>
    </table>
</section>